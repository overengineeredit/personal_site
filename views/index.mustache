{{> partials/header}}

<div class="container">
    <section class="hero">
        <h1>Welcome to My Personal Site</h1>
        <p class="hero-text">This is my personal website where you can learn more about me, view my resume, and read my blog posts.</p>
        <div class="hero-buttons">
            <a href="#about" class="button primary">About Me</a>
            <a href="/resume" class="button secondary">View Resume</a>
        </div>
    </section>

    <section id="about" class="about">
        <h2>About Me</h2>
        <div class="about-content">
            <div class="about-section">
                <h3>Background</h3>
                <p>{{content.about_me.background}}</p>
            </div>
            <div class="about-section">
                <h3>Interests</h3>
                <p>{{content.about_me.interests}}</p>
            </div>
        </div>
    </section>

    <section class="features">
        <h2>Quick Links</h2>
        <div class="feature-grid">
            <div class="feature-card">
                <h3>Resume</h3>
                <p>View my professional experience, education, and skills.</p>
                <a href="/resume" class="link">View Resume →</a>
            </div>
            <div class="feature-card">
                <h3>Blog</h3>
                <p>Read my thoughts, experiences, and insights.</p>
                <a href="/blog" class="link">Read Blog →</a>
            </div>
        </div>
    </section>
</div>

{{> partials/footer}} 